.big{
 position: fixed;
 top:0rpx ;
 left: -810rpx;
 Z-index: 999;
 height: 1800rpx;
}
.animation{
  left: 0;
  animation: move 0.45s;
}
.animationTo{
  left: -810rpx;
  animation: moveTo 0.35s;
}
@keyframes moveTo{
  from{
    left: 0rpx;
  }
  to{
    left: -810rpx;
  }
}
@keyframes move{
  from{
    left: -810rpx;
  }
  to{
    left: 0rpx;
  }
}
